<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eee"
    tools:context="com.udayaproject.pat.NavigationDrawerFragment">

    <LinearLayout
        android:id="@+id/navigation_drawer_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:orientation="vertical"
        android:weightSum="100">
        <!-- TODO: Update blank fragment layout -->

        <LinearLayout
            android:layout_width="280dp"
            android:layout_height="156dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="280dp"
                android:layout_height="120dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="126dp"
                    android:src="@mipmap/place_me"
                    android:layout_gravity="center"
                    android:paddingLeft="16dp"/>
                <TextView
                    android:id="@+id/navigation_drawer_image"
                    android:layout_width="200dp"
                    android:layout_height="126dp"
                    android:adjustViewBounds="true"
                    android:gravity="left|center_vertical"
                    android:text="@string/Placeme"
                    android:textColor="@color/colorPrimary"
                    android:textSize="40dp"
                    android:paddingTop="0dp"
                    android:paddingRight="16dp"
                    android:textStyle="bold" />

            </LinearLayout>

            <TextView
                android:id="@+id/logged_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:paddingTop="4dp"
                android:paddingLeft="16dp"
                android:text="sharandec7@gmail.com"
                android:textStyle="bold"
                android:textSize="18dp"/>

        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/drawer_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp" />

    </LinearLayout>

</RelativeLayout>